<Window	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		x:Class="Burgers.ModalDialogMethodInvoke"
		mc:Ignorable="d"
		Title="Invoke Method" MinWidth="400" MinHeight="190" MaxWidth="400" MaxHeight="190" SizeToContent="WidthAndHeight" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" WindowStartupLocation="CenterScreen">
	<Grid Background="White">
		<Button Content="OK" Margin="10,0,0,10" Click="OKButton_Click" FontSize="10" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="180"/>
		<Button Content="Cancel" Margin="0,0,10,10" Click="CancelButton_Click" FontSize="10" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="180"/>
		<ComboBox x:Name="MethodComboBox" Height="25" Margin="68,10,67,0" VerticalAlignment="Top" SelectionChanged="MethodComboBox_SelectionChanged" Padding="6,0,5,0" VerticalContentAlignment="Center"/>
		<Label x:Name="MethodPlaceholder" Content="Choose Method" Margin="68,10,67,0" Foreground="#B2505050" Height="25" VerticalAlignment="Top" IsHitTestVisible="False" VerticalContentAlignment="Center" Padding="5,0,5,0"/>
	</Grid>
</Window>
